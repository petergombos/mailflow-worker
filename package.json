{
  "name": "mailflow-worker",
  "version": "1.0.0",
  "description": "Processing jobs from API",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node --presets es2015,stage-0",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "test": "mocha --compilers js:babel-register",
    "tdd": "NODE_ENV=test nodemon --exec \"mocha --compilers js:babel-register\"",
    "deploy": "npm run build && docker build . -t petergombos/mailflow-worker && docker push petergombos/mailflow-worker:latest"
  },
  "author": "Peter Gombos <pepegombos@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.0.1",
    "nodemon": "^1.10.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "bull": "^3.0.0-alpha.4",
    "mailflow-core": "^0.0.43"
  }
